{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "declaration": true,
      "removeComments": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "incremental": true,
      "noImplicitAny": true,
      "types": ["cypress", "node"]
    },
    "include": [
      "src/**/*",
      "cypress/*",
    ]
  }